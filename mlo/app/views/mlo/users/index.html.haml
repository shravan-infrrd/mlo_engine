:css
  .ui-autocomplete {
    position: absolute;
    top: 0;
    left: 0;
    cursor: default;
    /*min-height: 200%;*/
    overflow: auto;
    z-index: 100;
    border: 1px solid #eeeeee;
    border-radius: 4px;
    background-color: #ffff;
    box-shadow: 0px 1px 6px 1px rgba(0,0,0,0.4);
  }
  a:not([href]):not([tabindex]) {
    color: inherit;
    text-decoration: none;
    color: #1c1c1c;
    font-weight: 400;
  }
  .ui-state-active,
  .ui-state-focus {
    color: #1c1c1c;
    background-color: #eeeeee;
  }
  .ui-menu .ui-menu-item {
    position: relative;
    margin: 0;
    padding: 15px;
    cursor: pointer;
    min-height: 0;
    list-style-image: url(data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7);
    color: #1c1c1c;
    font-weight: 400;
    font-size: 16px;
  }

