    focus: function(event, ui) {
        // $('#assign_search_field').val(ui.item.first_name + ' ' + ui.item.last_name);
        return false;
    },
    select: function(event, ui) {
        var full_name = ui.item.first_name + ' ' + ui.item.last_name
